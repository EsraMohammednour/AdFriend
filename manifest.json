{
  "manifest_version": 3,
  "name": "Ad Replacer - Workout Edition",
  "version": "1.0",
  "description": "Replace ads with workout exercises to stay active!",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["*://*/*"],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }
}  